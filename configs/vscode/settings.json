{
    "debug.inlineValues": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.detectIndentation": false,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.roundedSelection": false,
    "editor.rulers": [
        80,
        120,
        160
    ],
    "editor.snippetSuggestions": "top",
    "editor.suggest.maxVisibleSuggestions": 15,
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "explorer.autoReveal": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.visible": 0,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 50,
    "files.exclude": {
        "node_modules": true
    },
    "files.insertFinalNewline": true,
    "files.maxMemoryForLargeFilesMB": 2048,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.autofetchPeriod": 300,
    "git.branchSortOrder": "alphabetically",
    "git.enableSmartCommit": true,
    "git.showPushSuccessNotification": true,
    "search.enableSearchEditorPreview": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "workbench.commandPalette.history": 20,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.list.openMode": "doubleClick",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,
    "zenMode.hideLineNumbers": false,
    // Extensions settings
    "bracket-pair-colorizer-2.showBracketsInGutter": true,
    "material-icon-theme.hidesExplorerArrows": true,
    "material-icon-theme.opacity": 0.9,
    "material-icon-theme.saturation": 0.8,
    "gitlens.views.lineHistory.enabled": false,
    "gitlens.views.compare.location": "scm",
    "gitlens.views.fileHistory.location": "scm",
    "gitlens.views.lineHistory.location": "scm",
    "gitlens.views.repositories.location": "scm",
    "gitlens.views.search.location": "scm",
    "gitlens.views.repositories.files.layout": "tree",
    "gitlens.views.search.files.layout": "list",
    "terminal.integrated.scrollback": 100000
}
